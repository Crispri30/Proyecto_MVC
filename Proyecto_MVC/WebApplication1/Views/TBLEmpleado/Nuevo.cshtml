@model WebApplication1.Models.Empleados
@{
    ViewBag.Title = "Nuevo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="well">Ingresar nuevo empleado</h2>

@using (Html.BeginForm("Nuevo", "TBLEmpleado", FormMethod.Post))
{
    <p>@Html.LabelFor(m => m.Nombre) : @Html.TextBoxFor(m => m.Nombre)</p>
    <p>@Html.LabelFor(m => m.Documento) : @Html.TextBoxFor(m => m.Documento)</p>
    <p>@Html.LabelFor(m => m.Email) : @Html.TextBoxFor(m => m.Email)</p>
    <p>@Html.LabelFor(m => m.FechaIngreso) : @Html.TextBoxFor(m => m.FechaIngreso)</p>


    <input value="Guardar" type="submit" class="btn btn-success" />
    <a class="btn btn-primary" href="/TBLEmpleado">Retornar</a>
}